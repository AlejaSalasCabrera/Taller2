<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_img_item_cardvie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#53292970"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/id_tv_item_cv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alejandra Salas"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/id_tv_item_cv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hace: 4 minutos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_status"
                    />

                <TextView
                    android:id="@+id/id_tv_item_cv_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Me gusta"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</>